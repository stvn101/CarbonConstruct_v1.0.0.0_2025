# Global security headers for all routes (applied first, then overridden by specific rules)
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://js.stripe.com https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: blob: https:; connect-src 'self' https://*.supabase.co wss://*.supabase.co https://api.stripe.com https://api.openai.com; frame-src 'self' https://js.stripe.com https://hooks.stripe.com; object-src 'none'; base-uri 'self'; form-action 'self'; upgrade-insecure-requests

# Hashed assets (JS/CSS bundles) - cache for 1 year with immutable
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Static images in public folder - cache for 1 year
/*.webp
  Cache-Control: public, max-age=31536000, immutable

/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.jpeg
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable

/*.ico
  Cache-Control: public, max-age=31536000, immutable

# Fonts - cache for 1 year
/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/*.woff
  Cache-Control: public, max-age=31536000, immutable

# Manifest and favicon - cache for 1 day
/manifest.json
  Cache-Control: public, max-age=86400

/favicon.ico
  Cache-Control: public, max-age=86400

/favicon.png
  Cache-Control: public, max-age=86400

/favicon.webp
  Cache-Control: public, max-age=86400

# Service worker - must revalidate
/sw.js
  Cache-Control: public, max-age=0, must-revalidate

# HTML - short cache with revalidation
/index.html
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400
